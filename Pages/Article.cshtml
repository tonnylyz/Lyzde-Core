@page "~/post/{id}.html"
@using Markdig
@model Lyzde.Pages.ArticlePage
@{
    Layout = "_layout.cshtml";
    ViewBag.Title = "Lyzde - Blog - " + Model.Current.Title;
    ViewBag.Css = "/css/article.css";
}

<main role="main">
    <div class="jumbotron">
        <div class="container">
            <h1 id="blog-title" class="display-3">@Model.Current.Title</h1>
            <p id="blog-description">@Model.Current.Description</p>
            <p id="blog-tag">
                @{
                    var tags = Model.Current.Tag.Split('|');
                    foreach (var tag in tags)
                    {
                        if (tag == "")
                        {
                            continue;
                        }
                        <span class="badge badge-pill badge-dark">@tag</span>
                    }
                }
            </p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div id="blog-content" class="p-2">
                    @Html.Raw(Markdown.ToHtml(Model.Current.Content))
                </div>
            </div>
            <div class="col-md-4">

                <a href="/blog.html" class="btn btn-info btn-block">Article List</a>
                <dl class="row mt-3">
                    <dt class="col-sm-3">Datetime</dt>
                    <dd id="blog-datetime" class="col-sm-9">
                        @Model.Current.Datetime.ToString("f")
                    </dd>
                </dl>
                <button type="button" class="btn btn-secondary btn-block" disabled="disabled">Other articles</button>
                <ul id="blog-list" class="list-group list-group-flush">
                    @foreach (var a in Model.OtherArticles)
                    {
                        <a class="list-group-item list-group-item-action" href="/post/@(a.Id + ".html")">@a.Title</a>
                    }
                </ul>
            </div>
        </div>
    </div>
</main>